import os, sys

SUPPORTED_SUFFIX = ".webm"

if __name__ == "__main__":
    filenames = [fn for fn in os.listdir(os.curdir) 
                 if fn.endswith(SUPPORTED_SUFFIX)]
    for fn in filenames:
        newname = fn.replace("webm", "ogg")
        os.system("avconv -i \'%s\' -vn -acodec copy \'%s\'" % (fn, newname))
        
    ofnames = ['\'' + fn.replace("webm", "ogg") + '\'' for fn in filenames]
    for of in ofnames:
        os.system("vorbiscomment -w --tag \'album=YouTube' %s" % of)
    os.system("exfalso %s" % ofnames)
        
